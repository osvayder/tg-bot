# Пример файла .env.test для E2E тестирования
# Скопируйте в .env.test и заполните реальными данными
# ВАЖНО: .env.test должен быть в .gitignore!

# ============================================
# Флаг включения E2E Telegram (решение координатора)
# ============================================
ENABLE_E2E_TELEGRAM=0  # Установите 1 для включения

# ============================================
# Telegram Test Credentials
# ============================================
# Получите на https://my.telegram.org
TEST_API_ID=your_api_id_here
TEST_API_HASH=your_api_hash_here

# Session string (генерируется через pyrogram)
# НИКОГДА не коммитьте реальный session string!
TEST_SESSION_STRING=your_session_string_here

# Тестовый номер телефона
TEST_PHONE=+79991234567

# ============================================
# Test Bot Configuration
# ============================================
# Создайте через @BotFather
TEST_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
TEST_BOT_USERNAME=@test_production_bot

# ============================================
# Test Groups
# ============================================
# ID тестовой группы (получите через /whoami)
TEST_GROUP_ID=-1001234567890

# ID супергруппы с топиками (форум)
TEST_FORUM_GROUP_ID=-1001234567891

# ID тестового топика
TEST_TOPIC_ID=5

# ============================================
# Test Database (для интеграционных тестов)
# ============================================
TEST_DB_HOST=localhost
TEST_DB_PORT=5433
TEST_DB_NAME=test_botdb
TEST_DB_USER=test_bot
TEST_DB_PASSWORD=test_pass

# ============================================
# Test Redis
# ============================================
TEST_REDIS_HOST=localhost
TEST_REDIS_PORT=6380
TEST_REDIS_DB=1

# ============================================
# Django Test Settings
# ============================================
TEST_DJANGO_SECRET_KEY=test-secret-key-for-testing-only
TEST_DJANGO_DEBUG=True
TEST_DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# ============================================
# Test Logging
# ============================================
DEBUG_TESTS=0  # Установите 1 для подробного логирования
TEST_LOG_LEVEL=INFO

# ============================================
# Performance Limits (согласно координатору)
# ============================================
MAX_UNIT_TEST_TIME=30  # секунд
MAX_INTEGRATION_TEST_TIME=120  # секунд (2 мин)
MAX_E2E_TEST_TIME=900  # секунд (15 мин)

# ============================================
# Coverage Thresholds
# ============================================
MIN_COVERAGE=60  # Минимальное покрытие (старт)
TARGET_COVERAGE=80  # Целевое покрытие (месяц)