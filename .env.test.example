# Telegram E2E Test Configuration
# Copy this file to .env.test and fill with your test account data

# Telegram API credentials (get from https://my.telegram.org)
TEST_API_ID=12345678
TEST_API_HASH=abcdef1234567890abcdef1234567890

# Test phone number (with country code)
TEST_PHONE=+79991234567

# Session string (generate using pyrogram)
TEST_SESSION_STRING=AQ...длинная_строка...

# Test bot credentials
TEST_BOT_USERNAME=@your_test_bot
TEST_BOT_TOKEN=123456:ABC-DEF...

# Test groups (create and get IDs)
TEST_GROUP_ID=-100123456789
TEST_GROUP_WITH_TOPICS_ID=-100987654321

# Optional: Test timeout settings
TEST_TIMEOUT=30
TEST_RETRY_COUNT=3
